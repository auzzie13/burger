<h1>Eat-Da-Burger</h1>

<h2>Burger Ready!</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
       {{> burgers/burger-block devour=false}} 
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>


  <button type="submit">Add Burger</button>
</form>