<h1>Eat-Da-Burger</h1>

<h2>Burger Ready!</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      <form class="delete_form">
      <h2 type="text" placeholder="{{this.id}}, {{this.burger_name}}">{{this.burger_name}}</h2>
      <input type="hidden" value={{this.id}} class="delete_burger">
      <button>Delete</button>
      </form>
  
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>


  <button type="submit">Add Burger</button>
</form>